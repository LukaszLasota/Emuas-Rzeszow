                    <figcaption>Akty prawne</figcaption>  
                </figure>
                <div class="about-one-overlay"></div> 
            </a>
        </div>   
        
    </section>
    <section class="meet d-flex flex-wrap justify-content-center" id="Three">
        
        <h2 class="main-h2 w-100 text-center">Nasze spotkania</h2>
        
        {% for meet in meetings %}
        <label class="card-label col-12 col-md-6 col-lg-4 col-xl-3 my-0">
            <input type="checkbox"  />
            <div class="card-x">
                <div class="front">
                    <h3>{{meet.name}}</h3>
                    <p>{{meet.time}}</p>
                    <p>{{meet.place}}</p>
                    <p class="more-paragraph">więcej</p>
                </div>
                <div class="back">
                    <p>{{meet.text}} <a href="{{meet.href}}">{{meet.hrefText}}</a></p>
                </div>
            </div>
        </label>
         {% endfor %} 

    </section>

